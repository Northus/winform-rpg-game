using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace rpg_deneme.Core
{
    public class Enums
    {
        public enum CharacterClass : byte
        {
            Warrior = 1,
            Rogue = 2,
            Mage = 3
        }

        public enum ItemGrade : byte
        {
            Consumable = 0,
            Common = 1,
            Rare = 2,
            Epic = 3,
            Legendary = 4
        }

        public enum ItemLocation : byte
        {
            Inventory = 1,
            Equipment = 2,
            Storage = 3,
            Ground = 4,
            Blacksmith = 5
        }

        public enum ItemType : byte
        {
            Weapon = 1,
            Armor = 2,
            Consumable = 3,
            Material = 5
        }
        public enum ItemEffectType : byte
        {
            None = 0,
            RestoreHP = 1,    // Can Doldurma
            RestoreMana = 2   // Mana Doldurma
                              // Gelecekte: IncreaseStr, IncreaseDex...
        }
        public enum EquipmentSlot : int
        {
            Weapon = 0, // Silah
            Armor = 1,  // Zırh (Göğüslük)
            Helmet = 2, // Kask
            Boots = 3,  // Ayakkabı
                        // İleride: Shield, Ring, Amulet...
        }
        public enum NpcType
        {
            None = 0,
            Merchant = 1,   // Market
            Teleporter = 2,  // Işınlayıcı (Zone Seçimi)
            StorageKeeper = 3, // Depocu
            BlackSmith = 4    // Demirci
        }
    }
}
