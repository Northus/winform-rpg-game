using System;
using System.Data.SQLite;
using System.IO;
using System.Windows.Forms;

namespace rpg_deneme.Data
{
    public static class DatabaseHelper
    {
        // Local SQLite DB path (requested)
        private static readonly string DbPath = Path.Combine(Application.StartupPath, "database.db");

        // SQLite connection string pointing to the local file
        private static readonly string ConnectionString = $"Data Source={DbPath};Version=3;Foreign Keys=True;";

        /// <summary>
        /// Creates a new SQLite connection. Caller is responsible for opening/disposing.
        /// </summary>
        public static SQLiteConnection GetConnection() => new SQLiteConnection(ConnectionString);

        /// <summary>
        /// Ensures the SQLite database file exists. (Does not create schema.)
        /// Call this once at app startup if needed.
        /// </summary>
        public static void EnsureDatabaseFileExists()
        {
            var dir = Path.GetDirectoryName(DbPath);
            if (!string.IsNullOrEmpty(dir) && !Directory.Exists(dir))
                Directory.CreateDirectory(dir);

            if (!File.Exists(DbPath))
                SQLiteConnection.CreateFile(DbPath);
        }

        public static string GetDatabasePath() => DbPath;
    }
}
